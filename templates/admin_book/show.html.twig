{% extends 'base.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}
    <div class="crud-container p-5">
        <h1>Book</h1>
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ book.id }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ book.title }}</td>
                </tr>
                <tr>
                    <th>Author</th>
                    <td>{{ book.author }}</td>
                </tr>
                <tr>
                    <th>YearPublished</th>
                    <td>{{ book.yearPublished }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td>{{ book.image }}</td>
                </tr>
                <tr>
                    <th>Available</th>
                    <td>{{ book.available ? 'Yes' : 'No' }}</td>
                </tr>
                <tr>
                    <th>Rating</th>
                    <td>{{ book.rating }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ book.description }}</td>
                </tr>
            </tbody>
        </table>
        <a href="{{ path('app_admin_book_index') }}">back to list</a>
        <a href="{{ path('app_admin_book_edit', {'id': book.id}) }}">edit</a>
    </div>

    {{ include('admin_book/_delete_form.html.twig') }}
{% endblock %}
