{% extends 'base.html.twig' %}

{% block title %}Room index{% endblock %}

{% block body %}
    <div class="adminMain-container">
        <h1>Room index</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Capacity</th>
                    <th>Available</th>
                    <th>Name</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for room in rooms %}
                <tr>
                    <td>{{ room.id }}</td>
                    <td>{{ room.capacity }}</td>
                    <td>{{ room.available ? 'Yes' : 'No' }}</td>
                    <td>{{ room.name }}</td>
                    <td>
                        <a href="{{ path('app_admin_room_show', {'id': room.id}) }}">show</a>
                        <a href="{{ path('app_admin_room_edit', {'id': room.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('app_admin_room_new') }}">Create new</a>
    </div>
{% endblock %}
