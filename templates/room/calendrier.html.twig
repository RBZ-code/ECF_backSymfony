{% extends 'base.html.twig' %}

{% block title %}Système de Réservation de Salles
{% endblock %}

{% block body %}
	{% for flash_message in app.flashes('danger') %}
		<div class="alert alert-danger">
			{{ flash_message }}
		</div>
	{% endfor %}
	<div id="calendar-holder"></div>
{% endblock %}

{% block javascripts %}
	<script>
		document.addEventListener('DOMContentLoaded', () => {
var calendarEl = document.getElementById('calendar-holder');

var calendar = new FullCalendar.Calendar(calendarEl, {
locale: 'fr',
initialView: 'dayGridMonth',
headerToolbar: {
left: 'today',
center: 'title',
right: ''
},
contentHeight: "auto",
buttonText: {
today: "Aujourd'hui"
},
events: [],
selectable: true,

selectAllow: function (selectInfo) {
var now = new Date();
now.setDate(now.getDate() - 1);
var selectedDate = new Date(selectInfo.startStr);
console.log(selectedDate);

var dayOfWeek = selectedDate.getDay();

return dayOfWeek >= 1 && dayOfWeek <= 5 && now <= selectedDate;
},
select: function (info) { // Redirection vers la route du formulaire
var selectedDate = info.startStr;
window.location.href = "{{ path('heure_reservation', {id: room.id}) }}?selectedDate=" + selectedDate;
}
});

calendar.render();
});
	</script>
{% endblock %}
