{% extends 'base.html.twig' %}

{% block title %}Heures de réservation
{% endblock %}

{% block body %}
	<div class="container">
		{% for flash_message in app.flashes('danger') %}
			<div class="alert alert-danger">
				{{ flash_message }}
			</div>
		{% endfor %}
		<h1>Heures de réservation disponibles</h1>
		<div class="row">
			{% for hour in 8..18 %}
				<div class="col-md-4">
					<div class="card mb-4">
						<div class="card-body">
							<h5 class="card-title">Réservation à
								{{ hour }}h</h5>
							<p class="card-text">
								{% if unavailable_hours is not empty and hour ~ ':00' in unavailable_hours %}
									<button class='btn btn-danger' style="cursor: not-allowed">
										Complet
									</button>
								{% elseif current_hour >= hour and current_date|date('Y-m-d') == selectedDate|date('Y-m-d') %}
									<button class='btn btn-danger' style="cursor: not-allowed">
										Indisponible
									</button>
								{% elseif current_date|date('Y-m-d') > selectedDate|date('Y-m-d') %}
									<button class='btn btn-danger' style="cursor: not-allowed">
										Indisponible
									</button>
								{% elseif userHasReservations is defined and userHasReservations[hour] is defined %}
									<button class='btn btn-success' style="cursor: not-allowed">
										Réservé
									</button>
								{% else %}
									<button class="btn btn-primary btn-reserve" data-hour="{{ hour }}" data-selected-date="{{ selectedDate|date('Y-m-d') }}">
										Réserver
									</button>
								{% endif %}
							</p>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>

	<div class="modal fade" id="reservationModal" tabindex="-1" aria-labelledby="reservationModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="reservationModalLabel">Formulaire de Réservation</h5>
		
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					{{ form_start(form, {'attr':{'data-turbo':'false'}}) }}
					{{ form_row(form.start_date, {'attr': {'readonly': 'readonly'}}) }}
					<select name="choixEndDate" id="choixEndDate" class="form-control custom-select"></select>
					<div style="display: none;">
						{{ form_row(form.idRoom) }}
						{{ form_row(form.User) }}
					</div>
					<button type="submit" class="btn btn-primary">Réserver</button>
					{{ form_end(form) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}


{% block javascripts %}
	<script>
		document.addEventListener('DOMContentLoaded', () => {
$('.btn-reserve').click(function () {
var hour = $(this).data('hour');
console.log(hour);
var selectedDate = $(this).data('selected-date');
console.log(selectedDate);

$('#reservationModal').modal('show');


$('#reservation_start_date').val(selectedDate + ' ' + hour + ':00');

// Génération des options de durée en fonction de l'heure
var select = $('#choixEndDate');
select.empty(); // Vider les options précédentes

var maxDuration = 4; // Durée maximale autorisée
if (hour >= 16) {
maxDuration = Math.min(maxDuration, 4 - (hour - 15)); // Réduire la durée pour les heures tardives
}

for (var i = 1; i <= maxDuration; i++) {
var option = $('<option/>').val(i).text(i + ' Heure(s)');
select.append(option);
}
});
});
	</script>
{% endblock %}
